<h1>Editing book</h1>
 <% if @book.errors.any? %>
    <div class="error">
      <%= @book.errors.count %>errors prohibited this book from being saved:
    </div>
    <div class="errors">
      <ul>
        <% @book.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>


<%= form_with model: @book, url: edit_book_path(@book.id), method: :patch do |f| %>
    <div class="title">
      <h5>Title</h5>
      <%= f.text_field :title %>
    </div>
    <div class="body">
      <h5>Body</h5>
      <%= f.text_area :body %>
    </div>
    <div class="submit">
      <%= f.submit 'Update Book' %>
    </div>
    <div class="button">
      <%= link_to 'show', book_path(@book.id) %>
      <%= link_to 'back', '/books' %>
    </div>
<% end %>

