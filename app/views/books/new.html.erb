
<h1>Books</h1>

<div class="name">
  <h3>Title</h3>
  <h3>Body</h3>
</div>

<% @lists.each do |list| %>
  <div class="content">
    <div class="title">
      <table><%= list.title %></table>
    </div>
    <div class="body">
      <table><%= list.body %></table>
    </div>
    <div class="button">
      <%= link_to 'show', books_show_path(list.id) %>
      <%= link_to 'edit', edit_books_path(list.id) %>
      <%= link_to "Destroy", destroy_books_path(list.id), method: :delete, "data-confirm" => "本当に削除しますか？" %>
    </div>

  </div>
<% end %>



<div class="create">
  <%= form_with model: @list do |f| %>
    <h3>New book</h3>
    <% if @list.errors.any? %>
    <div class="error">
      <%= @list.errors.count%>errors prohibited this book from being saved:
    </div>
    <div class="errors">
      <ul>
        <% @list.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    <% end %>
    </div>

    </div>

    <div class="title">
      <h5>Title</h5>
      <%= f.text_field :title %>
    </div>
    <div class="body">
      <h5>Body</h5>
      <%= f.text_area :body %>
    </div>
    <div class="submit">
      <%= f.submit 'Create Book' %>
    </div>
  <% end %>
</div>

