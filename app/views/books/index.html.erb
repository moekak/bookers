<h1>Books</h1>

<div class="name">
  <h3>Title</h3>
  <h3>Body</h3>
</div>

<% @books.each do |book| %>
  <div class="content">
    <div class="title">
      <table><%= book.title %></table>
    </div>
    <div class="body">
      <table><%= book.body %></table>
    </div>
    <div class="button">
      <%= link_to 'show', book_path(book.id) %>
      <%= link_to 'edit', edit_book_path(book.id) %>
      <%= link_to "Destroy", book_path(book.id), method: :delete, "data-confirm" => "本当に削除しますか？" %>
    </div>

  </div>
<% end %>


<div class="create">
  <h3>New book</h3>
    <% if @book.errors.any? %>
    <div class="error">
      <%= @book.errors.count %>errors prohibited this book from being saved:
    </div>
    <div class="errors">
      <ul>
        <% @book.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    <% end %>
    </div>

  <%= form_with model: @book do |f| %>




    <div class="title">
      <h5>Title</h5>
      <%= f.text_field :title %>
    </div>
    <div class="body">
      <h5>Body</h5>
      <%= f.text_area :body %>
    </div>
    <div class="submit">
      <%= f.submit 'Create Book' %>
    </div>
  <% end %>
</div>


